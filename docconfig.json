{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [ "es2015", "dom" ],
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "jsx": "preserve"
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "includes": "src/",
    "json": "doc.json",
    "exclude": "**/node_modules/** **/src/angular** **/src/react**"
  },
  "include": [
    "src/**/*"
  ]
}